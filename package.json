{
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@dmsi/prettier-config": "^1.3.0",
    "husky": "^4.0.0",
    "lerna": "^3.20.2",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1"
  },
  "name": "dunsany",
  "private": true,
  "version": "0.0.0",
  "prettier": "@dmsi/prettier-config",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "prettier": "prettier **/*.{js,css,json,md,ts,tsx} --write",
    "build": "lerna run build"
  }
}
